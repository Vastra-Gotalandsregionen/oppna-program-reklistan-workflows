		<name>start</name>
		<metadata>
			<![CDATA[{"xy":[811,260]}]]>
		</metadata>
		<initial>true</initial>
		<transitions>
			<transition>
				<name>startworkflow</name>
				<target>selectpath</target>
				<default>true</default>
			</transition>
		</transitions>
	</state>
	<state>
		<name>approved</name>
		<metadata>
			<![CDATA[{"xy":[993,435]}]]>
		</metadata>
		<actions>
			<action>
				<name>approve</name>
				<script>
					<![CDATA[import com.liferay.portal.kernel.workflow.WorkflowStatusManagerUtil;
									import com.liferay.portal.kernel.workflow.WorkflowConstants;
					
									WorkflowStatusManagerUtil.updateStatus(WorkflowConstants.toStatus("approved"), workflowContext);]]>
				</script>
				<script-language>groovy</script-language>
				<execution-type>onEntry</execution-type>
			</action>
		</actions>
	</state>
	<task>
		<name>selectpath</name>
		<metadata>
			<![CDATA[{"xy":[608,145]}]]>
		</metadata>
		<actions>
			<notification>
				<name>Review Notification</name>
				<template>Artikel väntar på att skickas för granskning</template>
				<template-language>freemarker</template-language>
				<notification-type>user-notification</notification-type>
				<execution-type>onAssignment</execution-type>
			</notification>
		</actions>
		<assignments>
			<user/>
		</assignments>
		<transitions>
			<transition>
				<name>Skicka till terapigruppen</name>
				<target>review</target>
				<default>true</default>
			</transition>
			<transition>
				<name>Skicka till läkemedelskommitten</name>
				<target>committeereview</target>
				<default>false</default>
			</transition>
		</transitions>
	</task>
	<task>
		<name>review</name>
		<metadata>
			<![CDATA[{"xy":[393,312]}]]>
		</metadata>
		<actions>
			<notification>
				<name>Review Notification</name>
				<template>Artikel väntar på att granskas av terapigruppen.</template>
				<template-language>freemarker</template-language>
				<notification-type>user-notification</notification-type>
				<execution-type>onAssignment</execution-type>
			</notification>
		</actions>
		<assignments>
			<scripted-assignment>
				<script>
					<![CDATA[
									import com.liferay.portal.kernel.util.GetterUtil;
									import com.liferay.portal.kernel.workflow.WorkflowConstants;
									import com.liferay.portal.service.RoleLocalServiceUtil;
									import com.liferay.portlet.expando.model.ExpandoTableConstants;
									import com.liferay.portlet.expando.model.ExpandoValue;
									import com.liferay.portlet.expando.service.ExpandoValueLocalServiceUtil;
					
							        long companyId = GetterUtil.getLong((String) workflowContext.get(WorkflowConstants.CONTEXT_COMPANY_ID));
								    String className = (String) workflowContext.get(WorkflowConstants.CONTEXT_ENTRY_CLASS_NAME);
								    long classPK = GetterUtil.getLong((String) workflowContext.get(WorkflowConstants.CONTEXT_ENTRY_CLASS_PK));
					
								    ExpandoValue expandoValue = ExpandoValueLocalServiceUtil.getValue(
								            companyId,
								            className,
								            ExpandoTableConstants.DEFAULT_TABLE_NAME,
								            "reviewer-role",
								            classPK
								    );
					
								    String roleName = expandoValue.getString();
					
								    roles = Collections.singletonList(RoleLocalServiceUtil.getRole(companyId, roleName));
									user = null;
					
									]]>
				</script>
				<script-language>groovy</script-language>
			</scripted-assignment>
		</assignments>
		<transitions>
			<transition>
				<name>Granskningen är klar</name>
				<target>selectpath</target>
				<default>true</default>
			</transition>
		</transitions>
	</task>
	<task>
		<name>committeereview</name>
		<metadata>
			<![CDATA[{"xy":[549,328]}]]>
		</metadata>
		<actions>
			<notification>
				<name>Committee Review Notification</name>
				<template>Artikel väntar på att granskas av Läkemedelskommitten.</template>
				<template-language>freemarker</template-language>
				<notification-type>user-notification</notification-type>
				<execution-type>onAssignment</execution-type>
			</notification>
		</actions>
		<assignments>
			<roles>
				<role>
					<role-type>regular</role-type>
					<name>LK</name>
					<auto-create>true</auto-create>
				</role>
			</roles>
		</assignments>
		<transitions>
			<transition>
				<name>Skicka tillbaka till terapigruppen</name>
				<target>selectpath</target>
				<default>true</default>
			</transition>
			<transition>
				<name>Publicera på webbsida och app</name>
				<target>approved</target>
				<default>false</default>
			</transition>
		</transitions>
	</task>
</workflow-definition>
